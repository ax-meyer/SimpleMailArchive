@using SimpleMailArchiver.Data
@using Radzen
@using Radzen.Blazor

<RadzenCard Style="max-width:800px;margin:40px auto;" Class="rz-card">
    <ChildContent>
        <div class="d-flex justify-content-between align-items-center">
            <h4>Import</h4>
            <RadzenButton Icon="cancel" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Small" Click="@ModalCancel" AriaLabel="Cancel import">Cancel</RadzenButton>
        </div>

        <div class="mt-3" aria-live="polite">
            <RadzenText Value="@Progress.InfoMessage" Style="width:100%" Disabled="true" />
        </div>

        <div class="mt-3">
            <RadzenProgressBar Value="@((Progress.TotalMessageCount == 0) ? 0 : (double)Progress.ImportedMessageCount / Progress.TotalMessageCount * 100)" ShowValue="true" Style="height:20px" />
        </div>

        <div class="mt-3 table-responsive">
            <table class="table">
                <tr>
                    <td>Current Folder</td>
                    <td>@Progress?.CurrentFolder</td>
                </tr>
                <tr>
                    <td>Processed messages</td>
                    <td>@Progress?.ParsedMessageCount</td>
                </tr>
                <tr>
                    <td>Imported messages</td>
                    <td>@Progress?.ImportedMessageCount</td>
                </tr>
                <tr>
                    <td>Messages deleted on server</td>
                    <td>@Progress?.RemoteMessagesDeletedCount</td>
                </tr>
                <tr>
                    <td>Messages deleted locally</td>
                    <td>@Progress?.LocalMessagesDeletedCount</td>
                </tr>
            </table>
        </div>
    </ChildContent>
</RadzenCard>

@code{
    [Parameter]
    public required ImportProgress Progress { get; set; }

    [Parameter]
    public EventCallback<bool> OnCancel { get; set; }
    private Task ModalCancel() => OnCancel.InvokeAsync(false);

    protected override void OnInitialized()
    {
    }
}