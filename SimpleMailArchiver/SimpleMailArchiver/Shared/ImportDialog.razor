@using Microsoft.JSInterop
@using SimpleMailArchiver.Data
@using Radzen
@using Radzen.Blazor
@inject IJSRuntime JsRuntime;

<RadzenCard Style="max-width:800px;margin:40px auto;" Class="rz-card">
    <ChildContent>
        <div class="d-flex justify-content-between align-items-center">
            <h4>Import</h4>
            <RadzenButton Icon="cancel" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Small" Click="@ModalCancel" AriaLabel="Cancel import">Cancel</RadzenButton>
        </div>

        <div class="mt-3" aria-live="polite">
            <RadzenText Value="@Progress.InfoMessage" Style="width:100%" Disabled="true" />
        </div>

        <div class="mt-3">
            <RadzenProgressBar Value="@((Progress.TotalMessageCount == 0) ? 0 : (double)Progress.ImportedMessageCount / Progress.TotalMessageCount * 100)" ShowValue="true" Style="height:20px" />
        </div>

        <div class="mt-3">
            <RadzenGrid Data="new[] { Progress }" TItem="ImportProgress" ShowPagination="false" ShowToolbar="false" Style="width:100%">
                <Columns>
                    <RadzenGridColumn TItem="ImportProgress" Property="CurrentFolder" Title="Current Folder" />
                    <RadzenGridColumn TItem="ImportProgress" Property="ParsedMessageCount" Title="Processed messages" />
                    <RadzenGridColumn TItem="ImportProgress" Property="ImportedMessageCount" Title="Imported messages" />
                    <RadzenGridColumn TItem="ImportProgress" Property="RemoteMessagesDeletedCount" Title="Messages deleted on server" />
                    <RadzenGridColumn TItem="ImportProgress" Property="LocalMessagesDeletedCount" Title="Messages deleted locally" />
                </Columns>
            </RadzenGrid>
        </div>
    </ChildContent>
</RadzenCard>

@code{
    [Parameter]
    public required ImportProgress Progress { get; set; }

    [Parameter]
    public EventCallback<bool> OnCancel { get; set; }
    private Task ModalCancel() => OnCancel.InvokeAsync(false);

    protected override void OnInitialized()
    {
    }
}