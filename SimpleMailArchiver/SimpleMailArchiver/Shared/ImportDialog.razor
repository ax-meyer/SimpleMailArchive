@using SimpleMailArchiver.Data
@using Radzen
@using Radzen.Blazor

<RadzenCard Style="max-width:800px;margin:40px auto;" Class="rz-card">
    <ChildContent>
        <div class="d-flex justify-content-between align-items-center">
            <h4>Import</h4>
            <RadzenButton Icon="cancel" ButtonStyle="ButtonStyle.Secondary" Size="ButtonSize.Small" Click="@ModalCancel" AriaLabel="Cancel import">Cancel</RadzenButton>
        </div>

        <div class="mt-3" aria-live="polite">
            <RadzenText Value="@Executor.InfoMessage" Style="width:100%" Disabled="true" />
        </div>

        <div class="mt-3">
            <RadzenProgressBar Value="@((Executor.TotalMessageCount == 0) ? 0 : (double)Executor.ImportedMessageCount / Executor.TotalMessageCount * 100)" ShowValue="true" Style="height:20px" />
        </div>

        <div class="mt-3 table-responsive">
            <table class="table">
                <tr>
                    <td>Current Folder</td>
                    <td>@Executor?.CurrentFolder</td>
                </tr>
                <tr>
                    <td>Processed messages</td>
                    <td>@Executor?.ParsedMessageCount</td>
                </tr>
                <tr>
                    <td>Imported messages</td>
                    <td>@Executor?.ImportedMessageCount</td>
                </tr>
                <tr>
                    <td>Messages deleted on server</td>
                    <td>@Executor?.RemoteMessagesDeletedCount</td>
                </tr>
                <tr>
                    <td>Messages deleted locally</td>
                    <td>@Executor?.LocalMessagesDeletedCount</td>
                </tr>
            </table>
        </div>
    </ChildContent>
</RadzenCard>

@code{
    [Parameter]
    public required ImportExecutor Executor { get; set; }

    private async Task ModalCancel() => await Executor.Cts.CancelAsync();

    protected override void OnInitialized()
    {
    }
}