@page "/browse"

<PageTitle>Mail Archive</PageTitle>

@using SimpleMailArchiver.Data
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<ArchiveContext> DbFactory;

<h1>Mail Archive</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (Messages == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Subject</th>
                <th>Sender</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Messages)
            {
                <tr>
                    <td>@message.ReceiveTime.Day.@message.ReceiveTime.Month.@message.ReceiveTime.Year.ToString().TrimStart('2').TrimStart('0')
                    @message.ReceiveTime.Hour.ToString("D2"):@message.ReceiveTime.Minute.ToString("D2")</td>
                    <td>@message.Subject</td>
                    <td>@message.Sender</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<MailMessage>? Messages { get; set; }

    protected override void OnInitialized()
    {
        using var context = DbFactory.CreateDbContext();
        Messages = context.MailMessages.ToList();
    }
}

